
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
<table border="1px">
    <tr>
        <th>
            ID
        </th>
        <th>
            Tên thể loại
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                //hiển thị ID của đối tượng với
                @item.IDLoai
            </td>
            <td>
                @item.Tentheloai
            </td>
            <td>
                /*Thẻ Html.ActionLink dùng để link đến 1 trang khác
                (Tên Link hiển thị/Thư mục) tham số truyền ra là ( id = id.Item)
                */
                @Html.ActionLink("Sửa", "Edit", new { id = item.IDLoai }) |
                @Html.ActionLink("Chi tiết", "Detail", new { id = item.IDLoai }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.IDLoai }) |
            </td>
        </tr>
    }
</table>
@Html.ActionLink("Thêm mới", "Edit", "TheLoaiTinTuc") |

